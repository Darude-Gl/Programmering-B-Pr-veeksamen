<MainWindow>:  # Definerer layoutet for MainWindow-klassen
    orientation: "vertical"  # Sætter layoutretningen til lodret
    padding: 10  # Indsætter afstand (padding) rundt om layoutets indhold
    spacing: 10  # Indsætter mellemrum mellem widgets i layoutet

    TextInput:  # Inputfelt til at søge efter spil
        id: search_input  # ID for nem adgang i koden
        hint_text: "Søg efter spil..."  # Tekst, der vises som en guide i feltet
        size_hint_y: None  # Deaktiverer størrelsesjustering i højden
        height: 40  # Sætter inputfeltets faste højde
        on_text: root.filter_deals(self.text)  # Kalder filtreringsfunktionen, når brugeren indtaster tekst

    Button:  # Knap til at opdatere spiltilbud
        text: "Opdater spiltilbud"  # Teksten, der vises på knappen
        size_hint_y: None  # Deaktiverer størrelsesjustering i højden
        height: 50  # Sætter knappens faste højde
        on_release: root.fetch_game_deals()  # Kalder funktionen til at hente spiltilbud, når knappen trykkes

    ScrollView:  # Rulbart område til at vise spiltilbud
        size_hint: (1, 1)  # Brug hele den tilgængelige bredde og højde
        GridLayout:  # Layout til at vise spiltilbud i en gitterstruktur
            id: game_list
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 100  # Øger højden på hver række
            row_force_default: True
            padding: [10, 10]  # Tilføjer afstand omkring indholdet
            spacing: 10  # Øger mellemrum mellem rækkerne









